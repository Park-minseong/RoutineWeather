<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_mid_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/item_marginStartEnd">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/item_marginStartEnd"
        android:gravity="center"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/value_text_size"
        tools:text="06/15" />

    <View
        android:layout_width="@dimen/divider_height"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/item_marginStartEnd"
        android:layout_marginVertical="5dp"
        android:background="@color/divider_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rnSt_am"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="30dp"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/value_text_size"
            tools:text="30%" />

        <ImageView
            android:id="@+id/iv_main_am"
            android:layout_width="0dp"
            android:layout_height="@dimen/dust_min_width"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/small_text_margin"
            android:layout_weight="1"
            android:contentDescription="@string/image_contentDescription"
            app:srcCompat="@drawable/humidity" />

        <TextView
            android:id="@+id/tv_rnSt_pm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_marginStartEnd"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="30dp"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/value_text_size"
            tools:text="30%" />

        <ImageView
            android:id="@+id/iv_main_pm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dust_min_width"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/small_text_margin"
            android:layout_weight="1"
            android:contentDescription="@string/image_contentDescription"
            app:srcCompat="@drawable/humidity" />

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/item_marginStartEnd"
            android:layout_marginVertical="5dp"
            android:background="@color/divider_background" />

        <TextView
            android:id="@+id/tv_temp_min"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#2a74f8"
            android:textSize="@dimen/label_text_size"
            tools:text="20ยบ" />

        <TextView
            android:id="@+id/tv_temp_max"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#dc0100"
            android:textSize="@dimen/label_text_size"
            tools:text="20ยบ" />

    </LinearLayout>


</LinearLayout>